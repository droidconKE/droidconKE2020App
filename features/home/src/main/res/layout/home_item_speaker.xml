<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/rvSpeakerItemMargin"
    android:background="?selectableItemBackground">

    <View
        android:id="@+id/speakerImgBg"
        android:layout_width="@dimen/rvSpeakerItemWidth"
        android:layout_height="@dimen/rvSpeakerItemWidth"
        android:background="@drawable/promo_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
        android:id="@+id/speakerImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/rvSpeakerItemMargin"
        android:src="@drawable/greg"
        app:layout_constraintBottom_toBottomOf="@id/speakerImgBg"
        app:layout_constraintEnd_toEndOf="@id/speakerImgBg"
        app:layout_constraintStart_toStartOf="@id/speakerImgBg"
        app:layout_constraintTop_toTopOf="@id/speakerImgBg"
        app:shape_mode="circle"
        app:stroke_color="@color/colorAquaMarine"
        app:stroke_width="2dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/rvSpeakerItemMargin"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal"
        android:text="@string/dummy_keynot_speaker"
        android:textSize="12sp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/speakerImgBg" />

</androidx.constraintlayout.widget.ConstraintLayout>