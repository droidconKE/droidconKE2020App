<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.DroidConKe.DayNight" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.DroidConKe" parent="Theme.DroidConKe.DayNight">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>

       <!--   Sets status bar color-->
        <item name="colorPrimaryDark">@color/colorStatusBar</item>

        <item name="colorAccent">@color/colorSecondary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
    </style>

    <style name="Theme.DroidConKe.ActionBar" parent="Theme.DroidConKe">
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColorSecondary">@color/colorOnBackground</item>
    </style>

    <style name="Theme.DroidConKe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DroidConKe.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="Theme.DroidConKe.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">

    </style>

</resources>
